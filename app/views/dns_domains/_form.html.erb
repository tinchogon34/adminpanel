<%= simple_form_for(@zone, html: {class: 'form-horizontal' }, url: (@zone.try(:new_record?) ? zones_path : edit_zone_path(@zone)), defaults: { input_html: {class: 'form-control'}}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.input :name %>
  <%= f.input :master %>
  <%= f.input :type, collection: DnsDomain::DNS_TYPES, include_blank: false %>
  <%= f.button :submit, class: "btn btn-success" %>
<% end %>
