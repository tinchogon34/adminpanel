<%= simple_form_for([@domain,@mailbox], html: {class: 'form-horizontal' }, url: (@mailbox.try(:new_record?) ? domain_mailboxes_path(@domain) : mailbox_path(@mailbox))) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <% if @mailbox.new_record? %>
  <%= f.input :username, input_html: {class: 'form-control'} %>
  <% end %>
  <%= f.input :name, input_html: {class: 'form-control'} %>
  <% if @mailbox.persisted? %>
  <%= f.input :old_password, as: :password, input_html: {class: 'form-control'} %>
  <% end %>
  <%= f.input :password1, as: :password, input_html: {class: 'form-control'} %>
  <%= f.input :password1_confirmation, as: :password, input_html: {class: 'form-control'} %>
  <%= f.input :active %>
 
  <%= f.button :submit, class: "btn btn-success" %>
<% end %>
