<%= simple_form_for(@domain, html: {class: 'form-horizontal' }, url: (@domain.try(:new_record?) ? new_domain_path : edit_domain_path(@domain))) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.input :domain, input_html: {class: 'form-control'} %>
  <%= f.input :description, input_html: {class: 'form-control'} %>
  <%= f.input :aliases, input_html: {class: 'form-control'} %>
  <%= f.input :mailboxes, input_html: {class: 'form-control'} %>
  <%= f.input :active %>
  <%= f.button :submit, class: "btn btn-success" %>
<% end %>