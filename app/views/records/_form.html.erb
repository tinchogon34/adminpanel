<%= simple_form_for([@zone,@record], html: {class: 'form-horizontal' }, url: (@record.try(:new_record?) ? zone_records_path(@zone) : record_path(@record))) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.input :name %>
  <%= f.input :type, collection: Record::RECORD_TYPES, include_blank: false %>
  <%= f.input :content %>
  <%= f.input :ttl %>
  <%= f.input :prio %>
  <%= f.button :submit, class: "btn btn-success" %>
<% end %>
